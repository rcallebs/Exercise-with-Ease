<%- include('../partials/header') %>

<h1>All Currently Listed Exercises</h1>
<div class="formFilter">
  <form action="/exercises/filter" method="POST">
    <label name="dropdown"></label>
    <button type="submit">Filter Muscle Target</button>
    <select name="workoutFilter" id="workoutFilter">
      <option value="Legs">Legs</option>
      <option value="Core">Core</option>
      <option value="Shoulders">Shoulders</option>
      <option value="Chest">Chest</option>
      <option value="Back">Back</option>
      <option value="Arms">Arms</option>
    </select>
  </form>
</div>
<table class="exerciseList">
  <thead class="excerciseHeaders">
    <tr>
      <th>Exercise Name</th>
      <th>Type</th>
      <th>Muscle Target</th>
    </tr>
  </thead>

  <tbody>
    <% exercises.forEach(e => { %>

    <tr>
      <td><%= e.name %></td>
      <td><%= e.type %></td>
      <td><%= e.muscleTarget %></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<h3>Registered Users Please Add to the List</h3>

<%- include('../partials/footer') %>
