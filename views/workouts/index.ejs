<%- include('../partials/header') %>

<!-- adjust the date of workout to display mm/dd/yy with 12 hour cycles -->
<% function formatDate(date) { const formattedDate = new
Date(date).toLocaleString('en-US', { month: '2-digit', day: '2-digit', year:
'2-digit', hour: '2-digit', minute: '2-digit' }); return formattedDate; } %>

<h2>Recorded Workouts</h2>
<table>
  <thead>
    <tr>
      <th>Exercise</th>
      <th>Weight</th>
      <th>Sets</th>
      <th>Reps</th>
      <th>Duration</th>
      <th>Date (MM/DD/YY)</th>
    </tr>
  </thead>
  <tbody>
    <% workouts.forEach(w => { %>

    <tr>
      <td><%= w.name %></td>
      <td>
        <%= w.weight %>
      </td>
      <td><%= w.sets %></td>
      <td><%= w.reps %></td>
      <td><%= w.duration %></td>
      <td><%= formatDate(w.date) %></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<h3>Logged Workouts as of <%= time %></h3>

<%- include('../partials/footer') %>
