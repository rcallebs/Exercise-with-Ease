<%- include('../partials/header') %>


  <form id="record-workout" action="/workouts" method="POST">
    <div class="form-group">
      <label for="exercise-name">Exercise:</label>
      <input type="text" id="exercise-name" name="name" class="input-field" >
    </div>
    <div class="form-group">
      <label for="weight">Weight:</label>
      <input type="number" id="weight" name="weight" class="input-field" placeholder="lbs">
    </div>
    <div class="form-group">
      <label for="sets">Sets:</label>
      <input type="number" id="sets" name="sets" class="input-field">
    </div>
    <div class="form-group">
      <label for="reps">Reps:</label>
      <input type="number" id="reps" name="reps" class="input-field">
    </div>
    <div class="form-group">
      <label for="duration">Duration:</label>
      <input type="text" id="duration" name="duration" class="input-field">
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      <input type="date" id="date" name="dateOfWorkout" class="input-field">
    </div>
    <input type="submit" value="Record Workout">       
  </form>
  <p>
    <%= errorMsg %>
  </p>

<%- include('../partials/footer') %>