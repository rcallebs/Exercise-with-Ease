<form id="record-workout" action="/workouts" method="POST">
    <label>Exercise:</label>
        <input type="text" name="name">
    <label>Weight:</label>
        <input type="number" name="weight">
    <label>Sets:</label>
        <input type="number" name="sets">
    <label>Reps:</label>
        <input type="number" name="reps">
